{
  "name": "@kartuli/storybook",
  "version": "0.0.1",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start --dev-client",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "storybook:generate": "sb-rn-get-stories --config-path .storybook",
    "prestart": "pnpm storybook:generate",
    "start:storybook": "STORYBOOK_ENABLED=true expo start",
    "build:dev": "eas build --profile development --platform all",
    "build:storybook": "eas build --profile storybook --platform all",
    "build:storybook:ios": "eas build --profile storybook --platform ios",
    "build:storybook:android": "eas build --profile storybook --platform android",
    "build:preview": "eas build --profile preview --platform all",
    "build:production": "eas build --profile production --platform all"
  },
  "dependencies": {
    "@kartuli/core": "workspace:*",
    "@kartuli/types": "workspace:*",
    "@kartuli/ui": "workspace:*",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@shopify/flash-list": "2.2.0",
    "expo": "54.0.24",
    "expo-constants": "18.0.10",
    "expo-dev-client": "6.0.18",
    "expo-haptics": "15.0.7",
    "expo-router": "6.0.15",
    "expo-status-bar": "3.0.8",
    "expo-updates": "29.0.13",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "2.28.0",
    "react-native-keyboard-controller": "^1.18.5",
    "react-native-reanimated": "4.1.5",
    "react-native-safe-area-context": "5.6.0",
    "react-native-screens": "4.16.0",
    "react-native-svg": "^15.12.1",
    "react-native-worklets": "^0.5.1",
    "react-native-unistyles": "^3.0.18"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@storybook/addon-ondevice-actions": "^8.4.4",
    "@storybook/addon-ondevice-controls": "^8.4.4",
    "@storybook/react-native": "^8.4.4",
    "@types/react": "^19.1.0",
    "@types/react-native": "^0.73.0",
    "typescript": "5.9.3"
  }
}
