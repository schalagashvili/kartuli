{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"],
      "@kartuli/ui": ["../../packages/ui/src"],
      "@kartuli/ui/*": ["../../packages/ui/src/*"],
      "@kartuli/core": ["../../packages/core/src"],
      "@kartuli/core/*": ["../../packages/core/src/*"],
      "@kartuli/types": ["../../packages/types/src"],
      "@kartuli/types/*": ["../../packages/types/src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
