{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "base": {
      "env": {
        "EXPO_PUBLIC_APP_VARIANT": "production"
      }
    },

    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "EXPO_PUBLIC_APP_VARIANT": "development"
      },
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      }
    },

    "storybook": {
      "extends": "base",
      "distribution": "internal",
      "channel": "storybook",
      "env": {
        "EXPO_PUBLIC_APP_VARIANT": "storybook",
        "STORYBOOK_ENABLED": "true"
      },
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      }
    },

    "preview": {
      "extends": "base",
      "distribution": "internal",
      "channel": "preview",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      }
    },

    "production": {
      "extends": "base",
      "channel": "production",
      "ios": {
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
