{
  "name": "kartuli-monorepo",
  "private": true,
  "scripts": {
    "dev:rider": "pnpm --filter @kartuli/rider-mobile dev",
    "dev:driver": "pnpm --filter @kartuli/driver-mobile dev",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --build --force",
    "clean": "pnpm -r exec rm -rf node_modules && rm -rf node_modules"
  },
  "devDependencies": {},
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
