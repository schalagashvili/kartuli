{
  "name": "@kartuli/ui",
  "description": "Shared UI components for Kartuli app",
  "version": "1.0.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "src",
    "!src/**/__tests__",
    "!src/**/__mocks__",
    "!src/**/*.test.*",
    "!src/**/*.spec.*",
    "!src/**/*.perf.test.*"
  ],
  "scripts": {
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:perf": "TEST_RUNNER_ARGS='--runInBand --testMatch \"**/__tests__/**/*.perf.test.[jt]s?(x)\"' reassure",
    "test:perf:baseline": "TEST_RUNNER_ARGS='--runInBand --testMatch \"**/__tests__/**/*.perf.test.[jt]s?(x)\"' reassure --baseline",
    "test:perf:compare": "TEST_RUNNER_ARGS='--runInBand --testMatch \"**/__tests__/**/*.perf.test.[jt]s?(x)\"' reassure --compare"
  },
  "dependencies": {
    "@gorhom/bottom-sheet": "^5.2.6",
    "@kartuli/core": "workspace:*",
    "@kartuli/types": "workspace:*",
    "lucide-react-native": "^0.554.0",
    "react-error-boundary": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@react-native/babel-preset": "^0.82.1",
    "@storybook/react": "^8.4.4",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.1.0",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "react-test-renderer": "^19.1.0",
    "reassure": "^1.4.0",
    "ts-jest": "^29.4.5",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@shopify/flash-list": "2.2.0",
    "expo-haptics": "15.0.7",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-keyboard-controller": "^1.18.5",
    "react-native-reanimated": "4.1.5",
    "react-native-svg": "^15.12.1",
    "react-native-unistyles": "^3.0.18"
  }
}
